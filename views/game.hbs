                <div class="input-field col m6">
                    <select name="category" id="category" >
                        <option value="" disabled selected>Choose your Category</option>
                        <option value="world capitals">World Capitals</option>
                        <option value="functions">Functions</option>
                        <option value="javascript">Javascript</option>
                    </select>
                    <label for="category">Category</label>
                </div>
                <div class="input-field col m6">
                      <select name="numOfQuestions" id="num-of-questions" >
                          <option value="" disabled selected># of Questions</option>
                          <option value="1">1</option>
                          <option value="2">2</option>
                          <option value="3">3</option>
                      </select>
                      <label for="numOfQuestions">Number of Questions</label>
                </div>
            <div class="input-field col m6">
            	<button id="play-button" class="btn waves-effect waves-light blue" type="submit" name="action">Play<i class="material-icons right">send</i>
            	</button>
            </div>
        </form>
    </div>
    <div class="row" id="game-play" style="display:none;">
    	<h1 id="title-category"></h1>
    	<div id="answer">
    	</div>
    	<div>
    		<p id="question"></p>
    	</div>
    	<div id="button-box">
    	</div>
    	<div id="correct-box">
    	</div>
    </div>
    <div class="row" id="game-stats" style="display:none;">
        <h2 id="score"></h2>
        <table class="highlight">
	        <thead>
	          <tr>
	              <th>Question</th>
	              <th>Answer</th>
	              <th>Correct</th>
	          </tr>
        	</thead>
        	<tbody id="stats-table">
        	</tbody>
        </table>
        <div>
        	<a href="/game/start" id="play-again" class="btn waves-effect waves-light blue" type="submit" name="action">Play Again<i class="material-icons right">send</i>
            </a>
        </div>
        <p></p>
        <div>
        	<a href="/game/mystats" id="my-stats" class="btn waves-effect waves-light blue" type="submit" name="action">See My Statistics<i class="material-icons right">send</i>
            </a>
        </div>
    </div>
</div>